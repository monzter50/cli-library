{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@cli/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}
